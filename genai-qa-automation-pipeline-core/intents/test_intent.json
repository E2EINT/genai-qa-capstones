{
  "feature": "Login",
  "tests": [
    {
      "name": "Invalid Email Format",
      "type": "negative",
      "steps": [
        {
          "action": "goto",
          "value": "https://practicetestautomation.com/practice-test-login/"
        },
        {
          "action": "fill",
          "selector": "#username",
          "value": "invalid_email"
        },
        {
          "action": "fill",
          "selector": "#password",
          "value": "Password123"
        }
      ],
      "expect": "Email format error"
    },
    {
      "name": "No Password Input",
